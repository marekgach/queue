<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="./tests/TestHelper.php" colors="true">
    <testsuites>
        <testsuite name="marekgach/queue test suite">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>
</phpunit>